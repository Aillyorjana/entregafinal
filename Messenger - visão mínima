#messenger/views.py:

from django.contrib.auth.decorators import login_required
from django.shortcuts import render, get_object_or_404, redirect
from .models import Message
from .forms import MessageForm

@login_required
def inbox(request):
    msgs = request.user.received_messages.all().order_by('-sent_at')
    return render(request, 'messenger/inbox.html', {'messages': msgs})

@login_required
def send_message(request):
    if request.method == 'POST':
        form = MessageForm(request.POST)
        if form.is_valid():
            msg = form.save(commit=False)
            msg.sender = request.user
            msg.save()
            return redirect('messenger:inbox')
    else:
        form = MessageForm()
    return render(request, 'messenger/send_message.html', {'form': form})

